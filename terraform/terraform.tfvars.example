# AWS Configuration
aws_region  = "us-east-1"
environment = "dev"

# VPC Configuration
vpc_cidr             = "10.0.0.0/16"
availability_zones   = ["us-east-1a", "us-east-1b"]
public_subnet_cidrs  = ["10.0.1.0/24", "10.0.2.0/24"]
private_subnet_cidrs = ["10.0.11.0/24", "10.0.12.0/24"]

# S3 Configuration
s3_bucket_name = "aws-ai-agent-documents-unique-12345"

# Cognito Configuration
cognito_user_pool_name  = "ai-agent-users"
cognito_app_client_name = "ai-agent-client"

# Bedrock Configuration
bedrock_knowledge_base_name = "amazon-financial-docs"

# ECS Configuration
container_image = "123456789012.dkr.ecr.us-east-1.amazonaws.com/aws-ai-agent:latest"
container_port  = 8000

# Langfuse Configuration (sensitive - set via environment variables or use AWS Secrets Manager)
langfuse_public_key = "pk-lf-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"
langfuse_secret_key = "sk-lf-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"
